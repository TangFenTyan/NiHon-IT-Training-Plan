<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lalapodo.mapper.TestMapper2">

    <!--动态SQL if&where标签-->
    <select id="ifResult" resultType="com.lalapodo.Dao.TestTable3">
        select *
        from test_table3
        <!--where-->
        <!--1=1--> <!--true-->
        <!--<if test="id != null">
            id = #{id}
        </if>
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
        <if test="age != null">
            and age = #{age}
        </if>-->
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
        </where>
    </select>

    <!--动态SQL choose&when&otherwise标签-->
    <select id="ifResult2" resultType="com.lalapodo.Dao.TestTable3">
        select *
        from test_table3
        <where>
            <choose>
                <when test="id != null">
                    id = #{id}
                </when>
                <when test="name != null and name != ''">
                    and name = #{name}
                </when>
                <when test="age != null and age != ''">
                    and age = #{age};
                </when>
                <otherwise>
                    age = 18
                </otherwise>
            </choose>
        </where>
    </select>

    <!--动态SQL set标签-->
    <update id="updateResult">
        update test_table3
        <set>
            <if test="name != null and name != ''">
                name = #{name}, <!--set标签可用来删除更新SQL语句中额外的逗号-->
            </if>
            <if test="age != null and age != ''">
                age = #{age}
            </if>
        </set>
        where id = #{id}
    </update>

    <!--动态SQL trim标签-->
    <select id="ifResult3" resultType="com.lalapodo.Dao.TestTable3">
        select *
        from test_table3
        <trim prefix="where" prefixOverrides="and">
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="age != null and age != ''">
                and age = #{age};
            </if>
        </trim>
    </select>

    <!--动态SQL foreach标签-->
    <delete id="deleteResult">
        delete from test_table3
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <!--动态SQL sql标签-->
    <sql id="data">name,age</sql>
    <select id="ifResult4" resultType="com.lalapodo.Dao.TestTable3">
        select <include refid="data"/> <!--sql标签-->
        from test_table3
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
        </where>
    </select>
</mapper>